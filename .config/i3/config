#Set Wallpaper
exec nitrogen --restore

#start weather service
exec_always --no-startup-id ntfd

#Turn on redshift
exec_always killall redshift

#runs when manually restarting i3

exec_always --no-startup-id redshift

# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s>
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# Use this line or similar for autolocking using the blurlock utility
exec_always --no-startup-id xss-lock --transfer-sleep-lock -- blurlock --nofork

exec_always xrdb ~/.Xresources

exec_always killall polybar
exec_always  --no-startup-id polybar -r Bar & 

